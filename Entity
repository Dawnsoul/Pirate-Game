    public static Entity createEntity() { //creates a entity and assigns it random variables
        Entity x = new Entity();
        Random gen = new Random();
        
        x.setName("Entity");
        x.setHealth(gen.nextInt(60) + 50);
        x.setEnergy(10);
        x.setEnergyRecovery(gen.nextInt(3));
        x.setDamage(gen.nextInt(15) + 1);
        return x;
        
    }
    
    
    public void setName(String newName) { //setter for name
        name = newName;
        
    }
    
    public String getName() { //getter for name
        return name;
        
    }
    
    public void setDamage(int newDamage) { // sets the damage
        damage = newDamage;
        
    }
    
    public int getDamage() { //gets the damage value
        return damage;
    }

    public void incrementEnergy() { //method that allows the energy to be recovered --> needs to be used each interval of loop
        energy = energy + getEnergyRecovery();
    }
    
    public void setEnergyRecovery(int newEnergyRecovery) { //sets the eR
        energyRecovery = newEnergyRecovery;
    }
    
    public int getEnergyRecovery() { // gets the er
        return energyRecovery;
    }
    
    //setter for health
    public void setHealth(int newHealth) { 
        health = newHealth;
    }

    //getter for health
    public int getHealth() {
        return health;
    }

    //setter for energy
    public void setEnergy(int newEnergy) {
        energy = newEnergy;
    }

    //getter for energy
    public int getEnergy() {
        return energy;
    }

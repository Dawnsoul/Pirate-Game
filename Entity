    //constructor without attributes
    public Entity() {
        name = null;
        health = 0;
        energy = 0;
        //element = Element.Normal;
        rank = 0;
        debuff = 0;
        buff = 0;
        canHeal = false;
        damage = 0;
     
        
    }


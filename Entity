public class Entity {
    
    protected String name;
    protected int health; //health of the monster
    protected int energy; //amount of energy required for a monster to use a attack
    protected int maxHealth = 100;
    protected int maxEnergy = 10; //self explanatory
    protected int energyRecovery; //amount of energy a monster recovers per turn
    protected final int MAX_ENERGY_RECOVERY = 10; //self explanatory
    //protected Element element; //element of the monster --- NEED TO FIX
    protected int rank; //numbers inside are required to level up

public class SeaMonster extends Entity{
    
    protected double seaShield;
    Random gen = new Random();
    
    private static String [] nameList = {"Giant Shark", "Sea Serpent", "Moby Dick", "Kraken", "Balloon Seagull"};
    
    private String [] SMArray = {"Raise The Seas", "Origin Pulse", "Hydro Devastation", "Call the Wind", "Swallow the World"};
    private String [] SMDArray = {"The seas begin to swell, and waves crash down on you...", "Water begins to rise from the seas and they explode...", "The sea begins to rise and form a huge sphere, and then it slowly descends upon you...",
                         "The wind begins to pick up rapidly and then a hurricane of water forms near you...", "The sea begins to turn, faster and faster as you are caught in a whirlpool..."};
    int [] SMCArray = {5, 4, 7, 6, 10};
    int [] SMDMGArray = {30, 20, 40, 25, 50}; // BATTLE SEQUENCE
    
    public SeaMonster() {
        name = null;
        health = 0;
        energy = 0;
        energyRecovery = 0;
        damage = 0;
    }
    
    public SeaMonster(String newName, int newHealth, int newEnergy, int newEnergyRecovery, /*int newRank*/ 
                       /*SpecialAttack newSpecialAttack, boolean newCanHeal8*/ int newDamage) {
        super(newName, newHealth, newEnergy, newEnergyRecovery, /*newElement, newRank newDebuff, newBuff, newSpecialAttack, newCanHeal*/ newDamage);
        //earth monster can be cancerous and call in a ally ONCE
        
    }
    
    /*
    public static void createRandomEntity(Entity x) {
        Random gen = new Random();
        int y = gen.nextInt(5);
        x.setName(nameList[y]);
        
        /*
        the rest can be modified at the review process
        
        x.setHealth(gen.nextInt(100) + 50);
        x.setEnergy(gen.nextInt(50) + 50);
        x.setEnergyRecovery(gen.nextInt(5));
        /*
        x.setElement(Element.Normal);
        x.setDebuff(0);
        x.setBuff(0); 
        x.setDamage(gen.nextInt(15) + 1);
     */
   
   public String getSAName(int x) {
       return SMArray[x];
       
   }
    
   public static SeaMonster createSM() { 
        SeaMonster x = new SeaMonster();
        Random gen = new Random();

        int y = gen.nextInt(5);
        x.setName(nameList[y]);
        x.setHealth(gen.nextInt(50) + 50);
        x.setEnergy(15);
        x.setEnergyRecovery(gen.nextInt(5));
        x.setDamage(gen.nextInt(15) + 1);
        return x;

    }
    
    public void specialAttack(Ship x, SeaMonster y) { //flavor text
            int c = gen.nextInt(5);
            JOptionPane.showMessageDialog(null, "The monster has used ... " + SMArray[c]);
            y.setEnergy(0);
            JOptionPane.showMessageDialog(null, SMDArray[c]);
            
            int h = x.getHullStatus() - SMDMGArray[c];
            x.setHullStatus(h);
    }
    
    
    
}

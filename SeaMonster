package EntityInfo;

import StatusInfo.Element;
import AttackInfo.*;

/**
 *
 * @author 3004294
 */

public class SeaMonster extends Entity{
    
    protected double seaShield;
    
    public SeaMonster(double newHealth, double newEnergy, double newEnergyRecovery, Element newElement, int newRank, 
                       int newDebuff, int newBuff, 
                       SpecialAttack newSpecialAttack, boolean newCanHeal, double newSeaShield) {
        super(newHealth, newEnergy, newEnergyRecovery, newElement, newRank, newDebuff, newBuff, newSpecialAttack, newCanHeal);
        //earth monster can be cancerous and call in a ally ONCE
        seaShield = newSeaShield;
        
    }
    
}

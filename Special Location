package MapInfo;

import java.util.ArrayList;
import ItemInfo.*;
import EntityInfo.*;


/*
Change Log #1 : 
I imported in the necessary packages for the ArrayLists to work, and I changed ArrayList<Monster> to Arraylist<Entity>. 
We need to check if this SpecialLocation accounts for Land/Sea Monsters.

Change Log #2 :
Changed Item array list into multiple attributes of special location
Removed Item Array list

*/


public class SpecialLocation {
    private String name;
    private int location;
    private ArrayList<Entity> monsters;
    protected boolean hasArmor;
    protected int weaponMat;
    protected int armorMat;

    //constructor without attributes
    public SpecialLocation() {
        name = null;
        location = 0;
        monsters = new ArrayList<Entity>();
        hasArmor = false;
        weaponMat = 0;
        armorMat = 0;
    }

    //constructor with all attributes
    public SpecialLocation(String newName, int newLocation, ArrayList<Entity> newMonsters, boolean newHasArmor, int newWeaponMat
    , int newArmorMat) {
    
        name = newName;
        location = newLocation;
        monsters = newMonsters;
        hasArmor = newHasArmor;
        weaponMat = newWeaponMat;
        armorMat = newArmorMat;
    }

    //setter for name
    public void setName(String newName) {
        name = newName;
    }

    //getter for name
    public String getName() {
        return name;
    }

    //setter for location
    public void setLocation(int newLocation) {
        location = newLocation;
    }

    //getter for location
    public int getLocation() {
        return location;
    }

    //setter for monsters
    public void setMonsters(ArrayList<Entity> newMonsters) {
        monsters = newMonsters;
    }

    //getter for monsters
    public ArrayList<Entity> getMonsters() {
        return monsters;
    }
    
    //setter for hasArmor
    public void setHasArmor(boolean newHasArmor) {
        hasArmor = newHasArmor;
    }

    //getter for hasArmor
    public boolean getHasArmor() {
        return hasArmor;
    }
    
    //setter for weaponMat
    public void setWeaponMat(int newWeaponMat) {
        weaponMat = newWeaponMat;
    }

    //getter for weaponMat
    public int getWeaponMat() {
        return weaponMat;
    }

    //setter for armorMat
    public void setArmorMat(int newArmorMat) {
        armorMat = newArmorMat;
    }

    //getter for armorMat
    public int getArmorMat() {
        return armorMat;
    }

    //overrides toString method of Object class to neatly output SpecialLocation object
    public String toString() {
        return "name = " + name + "; " + "location = " + location + "; " + "loot = " + loot + "; " + "monsters = " + monsters;
    }

}

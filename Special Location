package MapInfo;

import java.util.ArrayList;
import ItemInfo.*;
import EntityInfo.*;


/*
Change Log #1 : 
I imported in the necessary packages for the ArrayLists to work, and I changed ArrayList<Monster> to Arraylist<Entity>. 
We need to check if this SpecialLocation accounts for Land/Sea Monsters.



*/


public class SpecialLocation {
    private String name;
    private int location;
    private ArrayList<Item> loot;
    private ArrayList<Entity> monsters;

    //constructor without attributes
    public SpecialLocation() {
        name = null;
        location = 0;
        loot = new ArrayList<Item>();
        monsters = new ArrayList<Entity>();
    }

    //constructor with all attributes
    public SpecialLocation(String newName, int newLocation, ArrayList<Item> newLoot, ArrayList<Entity> newMonsters) {
        name = newName;
        location = newLocation;
        loot = newLoot;
        monsters = newMonsters;
    }

    //setter for name
    public void setName(String newName) {
        name = newName;
    }

    //getter for name
    public String getName() {
        return name;
    }

    //setter for location
    public void setLocation(int newLocation) {
        location = newLocation;
    }

    //getter for location
    public int getLocation() {
        return location;
    }

    //setter for loot
    public void setLoot(ArrayList<Item> newLoot) {
        loot = newLoot;
    }

    //getter for loot
    public ArrayList<Item> getLoot() {
        return loot;
    }

    //setter for monsters
    public void setMonsters(ArrayList<Entity> newMonsters) {
        monsters = newMonsters;
    }

    //getter for monsters
    public ArrayList<Entity> getMonsters() {
        return monsters;
    }

    //overrides toString method of Object class to neatly output SpecialLocation object
    public String toString() {
        return "name = " + name + "; " + "location = " + location + "; " + "loot = " + loot + "; " + "monsters = " + monsters;
    }

}

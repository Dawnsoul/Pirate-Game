public class LandMonster extends Entity{
    
    protected boolean reduceDamage;
    Random gen = new Random();
    
    private static String [] nameList = {"Skeleton", "Goblin", "Thief", "Scorpion", "Water Balloon"};
    private String [] LMArray = {"Shake the Earth", "Mountain Bash", "Boulder Throw"};
    private String [] LMDArray = {"The land begins to shake as a earth quake ravages throughout the land.", "A huge rock falls ontop of you and explodes...", "You just got hit by a boulder."};
    int [] LMDMGArray = {20, 30, 25};
    
    public LandMonster(String newName, double newHealth, double newEnergyRecovery, Element newElement, /*int newRank*/ 
                       int newDebuff, int newBuff, 
                       /*SpecialAttack newSpecialAttack,*/ boolean newCanHeal, int newDamage, boolean newReduceDamage) {
        super(newName, newHealth, newEnergyRecovery, /*newElement, newRank newDebuff, newBuff, newSpecialAttack,*/ newCanHeal, newDamage);
        //earth monster can be cancerous and call in a ally ONCE
        reduceDamage = newReduceDamage;
        
        
        
    }
    
    //random object generator
    public static void createRandomEntity(Entity x) {
        Random gen = new Random();
        int y = gen.nextInt(5);
        x.setName(nameList[y]);
        
        /*
        the rest can be modified at the review process
        */
        x.setHealth(gen.nextInt(100) + 50);
        x.setEnergy(gen.nextInt(50) + 50);
        x.setEnergyRecovery(gen.nextInt(5));
        //x.setElement(Element.Normal);
        //x.setDebuff(0);
        //x.setBuff(0);
        x.setDamage(gen.nextInt(15) + 1);
        
     
    }
    
    public void specialAttack() { //flavor text
            System.out.println("The monster has used its special attack...");
            int y = gen.nextInt(3);
            JOptionPane.showMessageDialog(null, LMArray[y]);
            System.out.println(LMDArray[y]);
            
    }
}

public class LandMonster extends Entity{
    
    protected boolean reduceDamage;
    Random gen = new Random();
    
    private static String [] nameList = {"Skeleton", "Goblin", "Thief", "Scorpion", "Water Balloon"};
    private String [] LMArray = {"Shake the Earth", "Mountain Bash", "Boulder Throw"};
    private String [] LMDArray = {"The land begins to shake as a earth quake ravages throughout the land.", "A huge rock falls ontop of you and explodes...", "You just got hit by a boulder."};
    int [] LMDMGArray = {20, 30, 25};
    
    public LandMonster() {
        name = null;
        health = 0;
        energy = 0;
        energyRecovery = 0;
        damage = 0;
        
    }
    
    public LandMonster(String newName, int newHealth, int newEnergy, int newEnergyRecovery, int newDamage) {
        super(newName, newHealth, newEnergy, newEnergyRecovery, /*newElement, newRank newDebuff, newBuff, newSpecialAttack,*/newDamage);
        
    }
    
    /*
    public static void createRandomEntity(Entity x) {
        Random gen = new Random();
        int y = gen.nextInt(5);
        x.setName(nameList[y]);
        
        
        the rest can be modified at the review process
        
        x.setHealth(gen.nextInt(60) + 50);
        x.setEnergy(10);
        x.setEnergyRecovery(gen.nextInt(5));
        //x.setElement(Element.Normal);
        //x.setDebuff(0);
        //x.setBuff(0);
        x.setDamage(gen.nextInt(15) + 1);
        
    }*/
    
    public static LandMonster createLM() { 
        LandMonster x = new LandMonster();
        Random gen = new Random();

        int y = gen.nextInt(5);
        x.setName(nameList[y]);
        x.setHealth(gen.nextInt(80) + 50);
        x.setEnergy(10);
        x.setEnergyRecovery(gen.nextInt(3));
        x.setDamage(gen.nextInt(15) + 1);
        return x;

    }
    
    
    
    public Pirate specialAttack(Pirate x, LandMonster y) { //flavor text
            int c = gen.nextInt(3);
            JOptionPane.showMessageDialog(null, "The monster has used ..." + LMArray[c]);
            JOptionPane.showMessageDialog(null, LMDArray[c]);
            
            int r = x.getHealth() - LMDMGArray[c];
            x.setHealth(r);
            return x;
    }
}

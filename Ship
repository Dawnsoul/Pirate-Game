public class Ship {
    
    protected int hullStatus; //health\
    private int maxHullStatus = 100;

    protected String name;
    protected int cannonAmount; //amount of cannons on ship, damage multipler
    protected int cannonAmmo; //amount of times a cannon can be shot
    protected int cannonRecharge;
    protected int cannonDamage; //value needs to be low. because (dmg * amount) = ??
    protected int speed; //how fast a ship can move
    protected boolean repairMode;
    protected int hullRepair;
    
    
    public Ship() {
        name = null;
        hullStatus = 0;
        hullRepair = 0;
        cannonDamage = 0;
        speed = 0;
        repairMode = false;
        
    }
    
    public Ship(String newName, int newHullStatus, int newHullRepair, int newCannonDamage, int newSpeed, boolean newRepairMode) {
        name = newName;
        hullStatus = newHullStatus;
        hullRepair = newHullRepair;
        cannonDamage = newCannonDamage;
        speed = newSpeed;
        repairMode = newRepairMode;
        
    }
    
    public void createShip(Ship ship) {
        Scanner scan = new Scanner(System.in);
        
        System.out.println("Please enter in the name of your ship >:");
        String x = scan.next();
        ship.setName(x);
        
        ship.setHullStatus(maxHullStatus);
        ship.setHullRepair(5);
        ship.setCannonDamage(10);
        ship.setSpeed(2);
        ship.setRepairMode(false);
        
        System.out.println("\n");
        System.out.println("Creating ship...");
        System.out.println("Repairing hull...");
        System.out.println("Arming ship...");
        
        System.out.println("\n\n");
        
    }
    
    public void setRepairMode(boolean newRepairMode) {
        repairMode = newRepairMode;
        
    }
    
    public boolean getRepairMode() {
        return repairMode;
        
    }
    
    public void repairMode() { //call to activate or deactivate
        if(hullStatus < 50 && hullStatus > 0) {
            if(repairMode == false) { //repair mode is permanent
                repairMode = true;
                hullStatus = hullStatus + 30;
                cannonDamage = cannonDamage - 3; // NUMBER NEEDS TO BE CHANGED JAKE, AHHH
            
            }
        }
        
    }
    
    public double getHullRepair() {
        return hullRepair;
        
    }
    
    public void setHullRepair(int newHullRepair) {
        hullRepair = newHullRepair;
        
    }
    
    public String getName() { 
        return name;
        
    }
    
    public void setName(String newName) {
        name = newName;
        
    }
    
    public int getCannonRecharge() {
        return cannonRecharge;
        
    }
    
    public void setCannonRecharge(int newCannonRecharge) {
        cannonRecharge = newCannonRecharge;
        
    }
    
    public int getHullStatus() {
        return hullStatus;
        
    }
    
    public int getCannonDamage() {
        return cannonDamage;
        
    }
    
    public void setCannonDamage(int newCannonDamage) {
        cannonDamage = newCannonDamage;
        
    }
    
    public int getSpeed() {
        return speed;
        
    }
    
    public void setHullStatus(int newHullStatus) {
        hullStatus = newHullStatus;
        
    
    }
    
    public void setSpeed(int newSpeed) {
        speed = newSpeed;
        
    }

  
    
}

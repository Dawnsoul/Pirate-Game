public class Ship {
    
    protected double hullStatus; //health\

    protected int cannonAmount; //amount of cannons on ship, damage multipler
    protected int cannonAmmo; //amount of times a cannon can be shot
    protected int cannonRecharge;
    protected int cannonDamage; //value needs to be low. because (dmg * amount) = ??
    protected double speed; //how fast a ship can move
    protected boolean repairMode;
    
    
    public Ship(double newHullStatus, double newHullRepair, int newCannonAmmo, int newCannonRecharge, int newCannonDamage, double newSpeed) {
        hullStatus = newHullStatus;
        cannonAmmo = newCannonAmmo;
        cannonRecharge = newCannonRecharge;
        cannonDamage = newCannonDamage;
        speed = newSpeed;
        repairMode = false;
        
    }
    
    public void repairMode() { //call to activate or deactivate
        if(hullStatus < 50 && hullStatus > 0) {
            if(repairMode == false) { //repair mode is permanent
                repairMode = true;
                hullStatus = hullStatus + 30;
                cannonDamage = cannonDamage - 3; // NUMBER NEEDS TO BE CHANGED JAKE, AHHH
            
            }
        }
        
    }
    
    public double getCannonRecharge() {
        return cannonRecharge;
        
    }
    
    public void setCannonRecharge(int newCannonRecharge) {
        cannonRecharge = newCannonRecharge;
        
    }
    
    public double getHullStatus() {
        return hullStatus;
        
    }
    
    /*
    public int getCannonAmount() {
        return cannonAmount;
        
    }*/
    
    public int getCannonAmmo() {
        return cannonAmmo;
        
    }
    
    public int getCannonDamage() {
        return cannonDamage;
        
    }
    
    public double getSpeed() {
        return speed;
        
    }
    
    public void setHullStatus(double newHullStatus) {
        hullStatus = newHullStatus;
        
    }
    
    /*public void setCannonAmount(int newCannonAmount) {
        cannonAmount = newCannonAmount;
        
    }*/
    
    public void setCannonAmmo(int newCannonAmmo) {
        cannonAmmo = newCannonAmmo;
        
    }
    
    public void setSpeed(int newSpeed) {
        speed = newSpeed;
        
    }
    
}
